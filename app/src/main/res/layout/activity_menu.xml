<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
android:layoutDirection="ltr"
tools:context=".Main.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Play"
        android:textColor="#000000"
        android:id="@+id/Play_btn"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@drawable/btn"
        android:layout_above="@+id/Difficulty_btn"
        android:layout_alignLeft="@+id/animation3"
        android:layout_alignStart="@+id/animation3"
        android:layout_alignRight="@+id/animation3"
        android:layout_alignEnd="@+id/animation3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Difficulty"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/Difficulty_btn"
        android:background="@drawable/btn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/animation3"
        android:layout_alignStart="@+id/animation3"
        android:layout_alignRight="@+id/animation3"
        android:layout_alignEnd="@+id/animation3" />


<ImageView
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/animation3"
    android:src="@drawable/backmenu"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/Difficulty_btn" />

<Button
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/Exit_btn"
    android:textColor="#000000"
    android:background="@drawable/exit"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:layout_above="@+id/Play_btn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
