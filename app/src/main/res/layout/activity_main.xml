<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

<ImageView
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:id="@+id/animation1"
    android:src="@drawable/gameicon3"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/animation2"
        android:layout_above="@+id/animation1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rotem Abuhatzira"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:src="@drawable/gameicon"
        android:layout_below="@+id/animation1"
        android:layout_alignLeft="@+id/animation1"
        android:layout_alignStart="@+id/animation1" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:src="@drawable/gameicon"
        android:layout_below="@+id/animation1"
        android:layout_alignRight="@+id/animation1"
        android:layout_alignEnd="@+id/animation1" />

</RelativeLayout>