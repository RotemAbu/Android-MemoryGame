<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layoutDirection="ltr"
    tools:context=".GameDif.EasyActivity">


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card1"
        android:background="#00000000"
        android:src="@drawable/que"
        android:layout_alignTop="@+id/card2"
        android:layout_alignLeft="@+id/card4"
        android:layout_alignStart="@+id/card4" />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:id="@+id/card2"
        android:src="@drawable/que"
        android:layout_alignBottom="@+id/card3"
        android:layout_alignLeft="@+id/card5"
        android:layout_alignStart="@+id/card5"
        android:layout_marginBottom="77dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:id="@+id/card3"
        android:src="@drawable/que"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@+id/card2"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card4"
        android:background="#00000000"
        android:src="@drawable/que"
        android:layout_marginLeft="85dp"
        android:layout_below="@+id/card1"
        android:layout_marginTop="20dp"
        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card5"
        android:src="@drawable/que"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:layout_below="@+id/card1"
        android:layout_toRightOf="@+id/card1"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card6"
        android:src="@drawable/que"
        android:background="#00000000"
        android:layout_alignTop="@+id/card2"
        android:layout_alignLeft="@+id/card3"
        android:layout_alignStart="@+id/card3" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card7"
        android:src="@drawable/que"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/card4"
        android:layout_toRightOf="@+id/card2"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card8"
        android:src="@drawable/que"
        android:background="#00000000"
        android:layout_alignTop="@+id/card7"
        android:layout_toLeftOf="@+id/card7"
        android:layout_toStartOf="@+id/card7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/steps_count"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/back_buttom_3"
        android:text="Count of steps until now: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_steps_count"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/steps_count"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/back_buttom_3"
        android:background="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Winner"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/card8"
        android:layout_above="@+id/NextLevel2"
        android:layout_alignRight="@+id/card7"
        android:layout_alignEnd="@+id/card7"
        android:layout_alignLeft="@+id/NextLevel2"
        android:layout_alignStart="@+id/NextLevel2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min_steps"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Minimum steps: "
        android:layout_above="@+id/steps_count"
        android:layout_marginLeft="85dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_min_steps"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="495dp"
        android:layout_toRightOf="@+id/min_steps"
        />

    <Button
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:text="Next Level"
        android:id="@+id/NextLevel2"
        android:background="#00ffffff"
        android:textColor="#00000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_above="@+id/min_steps"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
