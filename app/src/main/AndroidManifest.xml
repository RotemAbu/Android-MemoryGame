<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rotem.memory">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gameicon2"
        android:label="Memory"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main.MenuActivity" />
        <activity android:name=".Main.DifficultyActivity" />
        <activity android:name=".GameDif.EasyActivity" />
        <activity android:name=".GameDif.MediumActivity" />
        <activity android:name=".GameDif.HardActivity" />
    </application>

</manifest>